<body>
    <!-- Start: Registration Form with Photo -->
    <section class="register-photo">
        <!-- Start: Form Container -->

        <%- include partials/messages.ejs %>
        <div class="alerts"></div>

        <div class="form-container">

            <!-- Start: Image -->
            <div class="image-holder"
                style="background: url(&quot;img/rsz_gifts-n6s4qcg%20(1).jpeg?h=4ee32e391d0b335f3aa87b09ec7697fd&quot;) center;width: 50%;height: 56%;">
            </div><!-- End: Image -->
            <form method="post" style="padding: 39px 60px;">
                <!-- <h2 class="text-center"><strong>שם הארגון : עירייה נהריה</strong></h2> -->
                <h2 class="text-center" style="margin-bottom: 0px;"><strong>מספר רכישה : <%= Transaction.id %></strong>
                </h2>
                <div class="Courses">
                    <i onclick="MoveCourse('<%= Transaction.times %>', false)" class="fa fa-arrow-left fabtn"></i>
                    &nbsp
                    <p id="count"></p>
                    &nbsp
                    <i onclick="MoveCourse('<%= Transaction.times %>', true)" class="fa fa-arrow-right fabtn"></i>
                </div>


                <br>

                <% let isDisabled = "" %>
                <% if (typeof ExistingSpecification?.CourseInstructorName != 'undefined') isDisabled="disabled" %>

                <div class="mb-3" style="text-align: center;">

                    <input class="form-control <%=isDisabled%> " type="text"
                        style="margin: 0px;margin-bottom: 10px;text-align: right;" name="CourseInstructorName"
                        placeholder="שם מוביל הסדנה"
                        value="<%= typeof ExistingSpecification?.CourseInstructorName != 'undefined' ? ExistingSpecification?.CourseInstructorName : '' %>">

                    <input class="form-control <%=isDisabled%> " type="text"
                        style="margin: 0px;margin-bottom: 10px;text-align: right;" name="CourseInstructorPhone"
                        placeholder="טלפון מוביל סדנה"
                        value="<%= typeof ExistingSpecification?.CourseInstructorPhone != 'undefined' ? ExistingSpecification?.CourseInstructorPhone : '' %>">

                    <input class="form-control <%=isDisabled%> " type="email"
                        style="margin: 0px;margin-bottom: 10px;text-align: right;" name="CourseInstructorEmail"
                        placeholder="מייל מוביל סדנה"
                        value="<%= typeof ExistingSpecification?.CourseInstructorEmail != 'undefined' ? ExistingSpecification?.CourseInstructorEmail : '' %>">

                    <input class="form-control <%=isDisabled%> " placeholder="תאריך - יום ושעה לביצוע הסדנה"
                        style="text-align: right;margin-bottom: 10px;" name="ExpiredCourseTimeDate" readonly
                        value="<%= typeof ExistingSpecification?.ExpiredCourseTimeDate != 'undefined' ? ExistingSpecification?.ExpiredCourseTimeDate : '' %>">

                    <input class="form-control <%=isDisabled%> " placeholder="כתובת מדוייקת"
                        style="text-align: right;margin-bottom: 10px;" name="Address"
                        value="<%= typeof ExistingSpecification?.Address != 'undefined' ? ExistingSpecification?.Address : '' %>">
                </div>

                <a class="already" href="#" style="text-align: center;">לכתובת זו תשלח הערכה עם כל האבזרים הנדרשים עד
                    יומיים לפני הסדנה</a>

                <input class="form-control <%=isDisabled%> " type="number" placeholder="מספר משתתפים בסדנה"
                    style="text-align: right;margin-bottom: 10px;" name="NumberOfCourseParticipants"
                    value="<%= typeof ExistingSpecification?.NumberOfCourseParticipants != 'undefined' ? ExistingSpecification?.NumberOfCourseParticipants : '' %>">

                <div class="mb-3"></div>

                <textarea class="form-control <%=isDisabled%> " placeholder="הערות כלליות"
                    style="text-align: right;height: 56px;" name="GeneralNotes"
                    value="<%= typeof ExistingSpecification?.GeneralNotes != 'undefined' ? ExistingSpecification?.GeneralNotes : '' %>"></textarea>

                <input type="hidden" name="ProductID" value="">
                <input type="hidden" name="TransactionID" value="<%= Transaction.id %>">
                <input type="hidden" name="Number">

                <div class="mb-3">
                    <button class="btn btn-primary d-block w-100 <%= isDisabled %>" onclick="checks()">עדכון פרטים</button>
                </div>
                <a class="already" href="#">שימו לב לאחר עדכון הפרטים לא ניתן לשנות את פרטי ההזמנה לסדנה זאת אנא בדקו
                    לפני שליחה</a>
            </form>
        </div><!-- End: Form Container -->
    </section><!-- End: Registration Form with Photo -->

    <script src="https://code.jquery.com/jquery-3.6.0.js"
        integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
