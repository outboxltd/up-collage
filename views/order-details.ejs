    <script src="bootstrap/js/bootstrap-datetimepicker.js"></script>
    <script src="bootstrap/js/bootstrap-datetimepicker.he.js"></script>
    <script src="js/utils.js"></script>
    <script src="js/orderDetails.js"></script>
    <script>

        checkreadonly("<%= typeof ExistingSpecification?.CourseInstructorName != 'undefined' %>")

        let countText = document.querySelector('#count')
        const urlSearchParams = new URLSearchParams(window.location.search);
        const params = Object.fromEntries(urlSearchParams.entries());
        let CourseCounter = params["CourseCounter"] === undefined ? 1 : Number(params["CourseCounter"])
        let Courses = Number('<%= Transaction.times %>')

        console.log(CourseCounter, Courses)

        // if (params["CourseCounter"] === undefined) {
        //     let url = new URL(window.location.href)
        //     url.searchParams.set('CourseCounter', 1);
        //     window.location.replace(url)
        // }

        if (isNaN(Number(params["CourseCounter"]))) CourseCounter = 1

        if (CourseCounter > 0 && CourseCounter <= Courses) {
            countText.innerText = `${CourseCounter} / ${Courses}`
        }
    </script>
</body>

